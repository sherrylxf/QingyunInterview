<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qingyun.user.mapper.UserMapper">

    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" resultType="com.qingyun.user.entity.User">
        SELECT * FROM qy_user
        WHERE phone = #{phone} AND deleted = 0
        LIMIT 1
    </select>

    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" resultType="com.qingyun.user.entity.User">
        SELECT * FROM qy_user
        WHERE email = #{email} AND deleted = 0
        LIMIT 1
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultType="com.qingyun.user.entity.User">
        SELECT * FROM qy_user
        WHERE username = #{username} AND deleted = 0
        LIMIT 1
    </select>

</mapper>

